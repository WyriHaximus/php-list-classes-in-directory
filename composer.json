{
  "name": "wyrihaximus/list-classes-in-directory",
  "description": "Allows you to list full qualified class names in directories and files.",
  "license": "MIT",
  "authors": [
    {
      "name": "Cees-Jan Kiewiet",
      "email": "ceesjank@gmail.com"
    }
  ],
  "require": {
    "php": "^8 || ^7.4",
    "roave/better-reflection": "^6 || ^5 || ^4 || ^3.1 || ^2",
    "wyrihaximus/constants": "^1.6"
  },
  "require-dev": {
    "wyrihaximus/async-test-utilities": "^4.0.7"
  },
  "autoload": {
    "files": [
      "src/functions_include.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "WyriHaximus\\Tests\\": "tests/",
      "Test\\App\\": "test-app/",
      "Test\\Classes\\": "test-classes/"
    },
    "files": [
      "test-app/Foo/Bar/BarAndFoo.php"
    ]
  },
  "config": {
    "allow-plugins": {
      "composer/package-versions-deprecated": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "ergebnis/composer-normalize": true,
      "icanhazstring/composer-unused": true,
      "infection/extension-installer": true
    },
    "platform": {
      "php": "7.4.7"
    },
    "sort-packages": true
  },
  "scripts": {
    "post-install-cmd": [
      "composer normalize"
    ],
    "post-update-cmd": [
      "composer normalize"
    ]
  }
}
